<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".MainActivity">


  <EditText
      android:id="@+id/etShip3"
      android:layout_width="50dp"
      android:layout_height="wrap_content"
      android:layout_alignParentStart="true"
      android:layout_alignParentBottom="true"
      android:layout_marginStart="-1dp"
      android:layout_marginBottom="12dp"
      android:backgroundTint="#74c2ff"
      android:ems="10"
      android:inputType="number"
      android:hint="0"
      android:textColor="#ff00"
      android:textSize="25dp" />

  <EditText
      android:id="@+id/etShip2"
      android:layout_width="50dp"
      android:layout_height="wrap_content"
      android:layout_alignParentStart="true"
      android:layout_alignParentBottom="true"
      android:layout_marginStart="-1dp"
      android:layout_marginBottom="81dp"
      android:backgroundTint="#a5baf3"
      android:ems="10"
      android:inputType="number"
      android:hint="0"
      android:textColor="#ff00"
      android:textSize="25dp" />

  <CheckBox
      android:id="@+id/checkBox3"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentBottom="true"
      android:layout_marginLeft="49dp"
      android:layout_marginBottom="15dp" />

  <CheckBox
      android:id="@+id/checkBox2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_above="@+id/checkBox3"
      android:layout_alignParentStart="true"
      android:layout_marginStart="49dp"
      android:layout_marginLeft="5dp"
      android:layout_marginBottom="18dp" />

  <CheckBox
      android:id="@+id/checkBox1"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_above="@id/checkBox2"
      android:layout_alignParentStart="true"
      android:layout_marginStart="49dp"
      android:layout_marginLeft="5dp"
      android:layout_marginBottom="20dp" />

  <SeekBar
      android:id="@+id/seekBarShip3"
      android:layout_width="600dp"
      android:layout_height="wrap_content"
      android:layout_alignParentBottom="true"
      android:layout_marginLeft="0dp"
      android:layout_toRightOf="@id/checkBox3"
      android:progressDrawable="@android:color/transparent"
      android:thumb="@drawable/layer_list_ship_wreck" />

  <SeekBar
      android:id="@+id/seekBarShip1"
      android:layout_width="600dp"
      android:layout_height="wrap_content"
      android:layout_alignParentBottom="true"
      android:layout_centerHorizontal="true"
      android:layout_marginLeft="4dp"
      android:layout_marginBottom="149dp"
      android:layout_toRightOf="@id/checkBox1"
      android:progressDrawable="@android:color/transparent"
      android:thumb="@drawable/layer_list_ship_wreck" />

  <SeekBar
      android:id="@+id/seekBarShip2"
      android:layout_width="600dp"
      android:layout_height="wrap_content"
      android:layout_alignParentBottom="true"
      android:layout_centerHorizontal="true"
      android:layout_marginLeft="0dp"
      android:layout_marginBottom="78dp"
      android:layout_toRightOf="@id/checkBox2"
      android:progressDrawable="@android:color/transparent"
      android:thumb="@drawable/layer_list_ship_wreck" />

  <ImageView
      android:id="@+id/image"
      android:layout_width="150dp"
      android:layout_height="100dp"
      android:layout_alignParentTop="true"
      android:layout_centerHorizontal="true"
      android:layout_marginTop="-4dp"
      android:background="@null"
      android:src="@drawable/layer_list_tittle" />

  <LinearLayout
      android:id="@+id/LinearLayoutPoint"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="horizontal">
  <TextView
      android:id="@+id/txtMoney"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="5dp"
      android:layout_marginTop="5dp"
      android:layout_marginEnd="5dp"
      android:layout_marginBottom="5dp"
      android:fontFamily="@font/bluestar_regular"
      android:text="100"
      android:textColor="#FF3700B3"
      android:textSize="50sp"
      android:textStyle="bold"/>

  <TextView
      android:id="@+id/txtBetMoney"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Bet Money"
      android:textSize="33dp"
      android:textColor="#ff00"
      android:textStyle="bold"
      android:backgroundTint="#e2f1e5"
      android:inputType="number"
      android:fontFamily="@font/bluestar_regular"
      android:layout_marginTop="3dp"/>
  </LinearLayout>

  <LinearLayout
      android:layout_width="175dp"
      android:layout_height="wrap_content"
      android:layout_alignParentRight="true"
      android:orientation="horizontal"
      android:layout_marginTop="15dp"
      android:layout_marginRight="40dp">

  <ImageButton
      android:id="@+id/btnStart"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:src="@drawable/layer_list_start"
      android:background="@null"/>

    <ImageButton
        android:id="@+id/btnReset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:layout_marginLeft="30dp"
        android:src="@drawable/layer_list_reset" />
  </LinearLayout>

  <EditText
      android:id="@+id/etShip1"
      android:layout_width="50dp"
      android:layout_height="wrap_content"
      android:layout_alignParentStart="true"
      android:layout_alignParentTop="true"
      android:layout_marginStart="0dp"
      android:layout_marginTop="130dp"
      android:textColor="#ff00"
      android:textSize="25dp"
      android:backgroundTint="#d8f7e5"
      android:ems="10"
      android:inputType="number"
      android:hint="0"
      />
</RelativeLayout>