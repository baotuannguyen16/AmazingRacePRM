<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity">

  <CheckBox
      android:id="@+id/checkBox3"
      android:layout_marginBottom="20dp"
      android:layout_marginLeft="5dp"
      android:layout_alignParentBottom="true"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>


  <CheckBox
      android:id="@+id/checkBox2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_above="@+id/checkBox3"
      android:layout_alignParentStart="true"
      android:layout_marginLeft="5dp"
      android:layout_marginBottom="20dp"/>

  <CheckBox
      android:id="@+id/checkBox1"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_above="@id/checkBox2"
      android:layout_alignParentStart="true"
      android:layout_marginLeft="5dp"
      android:layout_marginBottom="20dp"/>

  <SeekBar
      android:id="@+id/seekBarShip3"
      android:layout_toRightOf="@id/checkBox3"
      android:layout_alignParentBottom="true"
      android:thumb="@drawable/layer_list_ship_wreck"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:progressDrawable="@android:color/transparent"
      android:layout_marginBottom="10dp"/>

  <SeekBar
      android:id="@+id/seekBarShip2"
      android:layout_above="@+id/seekBarShip3"
      android:layout_toRightOf="@+id/checkBox2"
      android:thumb="@drawable/layer_list_ship_light"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:progressDrawable="@android:color/transparent"
      android:layout_marginBottom="10dp"/>

  <SeekBar
      android:id="@+id/seekBarShip1"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_above="@+id/seekBarShip2"
      android:layout_toRightOf="@+id/checkBox1"
      android:progressDrawable="@android:color/transparent"
      android:thumb="@drawable/layer_list_ship_dark"
      android:layout_marginBottom="10dp"/>
  <ImageView
      android:id="@+id/image"
      android:src="@drawable/layer_list_tittle"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerHorizontal="true"
      android:background="@null"
      android:layout_marginTop="5dp"/>

  <LinearLayout
      android:id="@+id/LinearLayoutPoint"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="horizontal">
  <TextView
      android:id="@+id/txtMoney"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="5dp"
      android:layout_marginTop="5dp"
      android:layout_marginEnd="5dp"
      android:layout_marginBottom="5dp"
      android:fontFamily="@font/bluestar_regular"
      android:text="100"
      android:textColor="#FF3700B3"
      android:textSize="50sp"
      android:textStyle="bold"/>

  <EditText
      android:id="@+id/edtBetMoney"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:hint="Bet Money"
      android:textSize="33dp"
      android:textColor="#ff00"
      android:textStyle="bold"
      android:backgroundTint="#e2f1e5"
      android:inputType="number"
      android:fontFamily="@font/bluestar_regular"
      android:layout_marginTop="3dp"/>
  </LinearLayout>

  <LinearLayout
      android:layout_width="175dp"
      android:layout_height="wrap_content"
      android:layout_alignParentRight="true"
      android:orientation="horizontal"
      android:layout_marginTop="15dp"
      android:layout_marginRight="40dp">

  <ImageButton
      android:id="@+id/btnStart"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:src="@drawable/layer_list_start"
      android:background="@null"/>

    <ImageButton
        android:id="@+id/btnReset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:layout_marginLeft="30dp"
        android:src="@drawable/layer_list_reset" />
  </LinearLayout>
</RelativeLayout>